<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/background"
	tools:context=".presentation.screens.payment.PaymentFragment">

	<ImageView
		android:id="@+id/imageLocale"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="9dp"
		android:src="@drawable/ic_vector_1"
		app:layout_constraintEnd_toEndOf="@+id/textView2"
		app:layout_constraintStart_toStartOf="@+id/textView2"
		app:layout_constraintTop_toBottomOf="@+id/textView2"/>

	<TextView
		android:id="@+id/textView2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="36dp"
		android:layout_marginTop="45dp"
		android:fontFamily="@font/montserrat_alternates_light"
		android:text="@string/name_of_language"
		android:textColor="@color/black"
		android:textSize="18sp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>

	<ImageView
		android:id="@+id/imMenu"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="36dp"
		android:layout_marginTop="45dp"
		android:src="@drawable/ic_menu"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintEnd_toEndOf="parent"/>

	<TextView
		android:id="@+id/textPayment"
		android:layout_width="0dp"
		android:layout_height="45dp"
		android:layout_marginEnd="36dp"
		android:layout_marginStart="36dp"
		android:layout_marginTop="30dp"
		android:background="@drawable/custom_text_view_shape_view_pager"
		android:gravity="center"
		android:textAppearance="@style/TextContainer"
		android:text="Ваш заказ"
		android:textAlignment="center"
		android:textColor="@color/black"
		android:textSize="20sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/imageLocale"/>

	<androidx.core.widget.NestedScrollView
		android:id="@+id/content"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		app:layout_constraintBottom_toTopOf="@+id/totalOrder"
		app:layout_constraintTop_toBottomOf="@+id/textPayment"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/rcViewCheckPrice"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginVertical="16dp"
				app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
				tools:listitem="@layout/order_item"/>
			<TextView
				android:id="@+id/textBooking"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="36dp"
				android:layout_marginVertical="16dp"
				android:text="Оплата"
				android:textColor="@color/black"
				android:textSize="20sp"/>
			<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/rcViewCard"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginVertical="36dp"
				app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
				tools:listitem="@layout/card_item"/>
		</LinearLayout>
	</androidx.core.widget.NestedScrollView>

	<LinearLayout
		android:id="@+id/totalOrder"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="36dp"
		android:layout_marginHorizontal="36dp"
		android:orientation="vertical"
		app:layout_constraintBottom_toTopOf="@+id/buttonPay"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent">

		<TextView
			android:id="@+id/textOrder"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Сегодня, 17:00, 3 гостя"
			android:textColor="@color/black"
			android:gravity="center"
			android:textSize="16sp"
			android:fontFamily="@font/montserrat"/>

		<TextView
			android:id="@+id/textTotalPrice"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="300.00 Р"
			android:textColor="@color/black"
			android:gravity="center"
			android:textSize="50sp"
			android:fontFamily="@font/montserrat"/>
	</LinearLayout>
	<com.google.android.material.button.MaterialButton
		android:id="@+id/buttonPay"
		android:layout_width="0dp"
		android:layout_height="56dp"
		android:layout_marginBottom="40dp"
		android:layout_marginEnd="34dp"
		android:layout_marginStart="34dp"
		android:text="Оплатить"
		android:textAllCaps="false"
		android:textSize="20sp"
		app:cornerRadius="10dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>